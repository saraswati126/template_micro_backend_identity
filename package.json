{
  "name": "micro-identity",
  "version": "0.0.1",
  "description": "Boilerplate for creating identity microservice",
  "main": "src/app.ts",
  "scripts": {
    "dev": "eslint . --ext .ts && nodemon",
    "offline": "eslint . --ext .ts && serverless offline start",
    "tsoa": "tsoa spec-and-routes",
    "test": "jest --runInBand --watch",
    "lint": "eslint . --ext .ts",
    "debug": "nodemon --inspect=3333 src/app.ts",
    "deploy:dev": "node iac/crypto-keys/crypto.js && sls deploy --config iac/resources/pinpoint/pinpoint.serverless.yml --stage dev && node iac/resources/pinpoint/pinpoint_domain_register.js && sls deploy --stage dev",
    "destroy:dev": "sls remove --stage dev && sls remove --config iac/resources/acm.serverless.yml --stage dev ",
    "deploy:uat": "sls deploy --config iac/resources/acm.serverless.yml --stage uat && sls deploy --stage uat ",
    "deploy:prod": "sls deploy --config iac/resources/acm.serverless.yml --stage prod && sls deploy --stage prod"
  },
  "dependencies": {
    "@tsoa/runtime": "^3.3.0",
    "@types/aws-sdk": "^2.7.0",
    "@types/express": "^4.17.8",
    "@types/shelljs": "^0.8.8",
    "@types/swagger-ui-express": "^4.1.2",
    "aws-sdk": "^2.768.0",
    "aws-xray-sdk-core": "^3.2.0",
    "aws-xray-sdk-express": "^3.2.0",
    "axios": "^0.20.0",
    "body-parser": "^1.19.0",
    "connect-ensure-login": "^0.1.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "data-api-client": "^1.1.0",
    "dotenv": "^8.2.0",
    "dotenv-flow": "^3.2.0",
    "ejs": "^3.1.5",
    "ejs-webpack-loader": "^2.2.2",
    "email-validator": "^2.0.4",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "google-libphonenumber": "^3.2.13",
    "jsonwebtoken": "^8.5.1",
    "ms": "^2.1.2",
    "nodemon": "^2.0.4",
    "oauth2orize": "^1.11.0",
    "passport": "^0.4.1",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth2": "^0.2.0",
    "passport-http": "^0.3.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "passport-oauth2-client-password": "^0.1.2",
    "passport-oauth2-client-password-uri": "^1.0.0",
    "password-validator": "^5.1.0",
    "reflect-metadata": "^0.1.13",
    "serverless-http": "^2.6.0",
    "shelljs": "^0.8.4",
    "simple-oauth2": "^4.1.0",
    "source-map-support": "^0.5.10",
    "swagger-ui-express": "^4.1.4",
    "tsoa": "^3.3.0",
    "typeorm": "^0.2.28",
    "typeorm-aurora-data-api-driver": "^1.4.0",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.63",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.5",
    "@types/serverless": "^1.78.1",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "copy-webpack-plugin": "^6.2.1",
    "eslint": "^7.10.0",
    "fork-ts-checker-webpack-plugin": "^5.2.0",
    "jest": "^26.5.2",
    "jest-cli": "^26.5.2",
    "serverless-domain-manager": "^5.0.0",
    "serverless-dotenv-plugin": "^3.0.0",
    "serverless-offline": "^6.8.0",
    "serverless-webpack": "^5.3.5",
    "supertest": "^5.0.0",
    "ts-jest": "^26.4.1",
    "ts-loader": "^8.0.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "webpack": "^4.44.2",
    "webpack-node-externals": "^2.5.2"
  },
  "author": "Martin Greyling",
  "license": "MIT",
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  }
}
